#!/bin/sh

PRG="$0"
PRGDIR=`dirname "$PRG"`
HAZELCAST_HOME=`cd "$PRGDIR/.." >/dev/null; pwd`
PID_FILE=$HAZELCAST_HOME/bin/hazelcast_instance.pid

if [ $JAVA_HOME ]
then
	echo "JAVA_HOME found at $JAVA_HOME"
	RUN_JAVA=$JAVA_HOME/bin/java
else
	echo "JAVA_HOME environment variable not available."
    RUN_JAVA=`which java 2>/dev/null`
fi

if [ -z $RUN_JAVA ]
then
    echo "JAVA could not be found in your system."
    echo "please install Java 1.6 or higher!!!"
    exit 1
fi

	echo "Path to Java : $RUN_JAVA"

#### you can enable following variables by uncommenting them

#### minimum heap size
# MIN_HEAP_SIZE=2G

#### maximum heap size
# MAX_HEAP_SIZE=2G


if [ "x$MIN_HEAP_SIZE" != "x" ]; then
	JAVA_OPTS="$JAVA_OPTS -Xms${MIN_HEAP_SIZE}"
fi

if [ "x$MAX_HEAP_SIZE" != "x" ]; then
	JAVA_OPTS="$JAVA_OPTS -Xmx${MAX_HEAP_SIZE}"
fi
JAVA_OPTS="$JAVA_OPTS -Dlog4j.configuration=file://$HAZELCAST_HOME/bin/log4j2.xml"
export CLASSPATH="$HAZELCAST_HOME/lib/hazelcast-all-3.8.2.jar:.:$HAZELCAST_HOME/lib/log4j-api-2.10.0.jar:$HAZELCAST_HOME/lib/log4j-core-2.10.0.jar"
#export CLASSPATH="$HAZELCAST_HOME/lib/hazelcast-all-3.8.2.jar:.:/opt/hazelcast/lib/log4j-api-2.10.0.jar:/opt/hazelcast/lib/log4j-core-2.10.0.jar"

echo "########################################"
echo "# RUN_JAVA=$RUN_JAVA"
echo "# JAVA_OPTS=$JAVA_OPTS"
echo "# starting now...."
echo "########################################"

PID=$(cat "${PID_FILE}");
if [ -z "${PID}" ]; then
    echo "Process id for hazelcast instance is written to location: {$PID_FILE}"
    #echo $CLASSPATH
    $RUN_JAVA -server $JAVA_OPTS com.hazelcast.core.server.StartServer >/dev/null 2>&1 &
    echo $! > ${PID_FILE}
else
    echo "Another hazelcast instance is already started in this folder. To start a new instance, please unzip 3.8.2.zip/tar.gz in a new folder."
    exit 0
fi
