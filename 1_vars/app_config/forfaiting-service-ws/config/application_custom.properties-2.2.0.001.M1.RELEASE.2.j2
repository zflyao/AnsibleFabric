##application config
spring.application.name=Forfaiting
spring.application.version=1.2.0
##database config
spring.jpa.database-platform=org.hibernate.dialect.PostgreSQL82Dialect
spring.jpa.database=POSTGRESQL
spring.datasource.url={{ pg_url }}/{{ instance_vars.pg_database }}?targetServerType=master
spring.datasource.username={{ pg_user }}
spring.datasource.password={{ pg_pass }}
#businessLine
hbcc.core.properties.businessLine=LC
hbcc.core.properties.subBusinessLine=FFT
#mongodb
mongodb.addresses={{ mongodb_addresses }}
mongodb.database={{ instance_vars.mongodb_database }}
#cache
hbcc.cache.mongo.uri={{ mongodb_url }}/{{ instance_vars.mongodb_cache_database }}
hbcc.cache.mongo.database={{ instance_vars.mongodb_cache_database }}
##message queue
hbcc.core.properties.mqConfigProperties.rabbitMQConfig.username={{ rabbitmq_user }}
hbcc.core.properties.mqConfigProperties.rabbitMQConfig.password={{ rabbitmq_pass }}
hbcc.core.properties.mqConfigProperties.rabbitMQConfig.addresses={{ rabbitmq_address }}
hbcc.core.properties.mqConfigProperties.rabbitMQConfig.sysQueueName=sys_fftQueue
hbcc.core.properties.mqConfigProperties.queue.queueName=Runtf_channelfft
hbcc.core.properties.mqConfigProperties.queue.consumerAmountsPreQueue=2

#hbcc.core.properties.portalFlag=false
##hbcc.core.properties.portalFlag=true
#hbcc.ugm.portalUrl.ip=portal.org12.finrunchain.com
#hbcc.ugm.portalUrl.port=8081
hbcc.core.properties.myChain.name={{ eco_name }}/{{ instance_vars.channel }}
hbcc.core.properties.myChain.ip={{ instances[instance_name]['platform-hfclient-sdk-ws']['domain'] }}
hbcc.core.properties.myChain.port={{ instances[instance_name]['platform-hfclient-sdk-ws']['listen_port'] }}
hbcc.core.properties.ccbPhysicalNid={{ instance_vars.ccb_phy_nid }}
hbcc.core.properties.cloudIntranetAddr={{ instance_vars.hbcccloud_address }}
##blockchian config
hbcc.core.properties.blockChain.connection.pool.host={{ instances[instance_name]['platform-hfclient-sdk-ws']['domain'] }}
hbcc.core.properties.blockChain.connection.pool.port={{ instances[instance_name]['platform-hfclient-sdk-ws']['listen_port'] }}
hbcc.core.properties.blockChain.connection.pool.forceRefresh=false
hbcc.core.properties.blockChain.connection.channel={{ instance_vars.channel }}
hbcc.core.properties.blockChain.connection.enableSSL=false
hbcc.core.properties.blockChain.connection.supportedProtocols=TLSv1
hbcc.core.properties.blockChain.connection.enableConnectionReuse=false
#cloud
#hbcc.core.properties.cloudHost=http://hbcccloud.finblockchain.cn:14040
#http
hoperun.http.sessionTimeoutMinutes=30
hoperun.http.maximumSessions=1
hbcc.ugm.maxSessionConcurrency=1
hbcc.ugm.loginRetryMaxErrorTimes=3
hbcc.ugm.loginFailLockTimeMin=30
#pressimage
hbcc.core.properties.pressImage.english={{ work_dir }}/config/English.png
hbcc.core.properties.pressImage.englishLg={{ work_dir }}/config/English_lg.png
hbcc.core.properties.pressImage.chinese={{ work_dir }}/config/Chinese.png
hbcc.core.properties.pressImage.chineseLg={{ work_dir }}/config/Chinese_lg.png
#statemachine
hoperun.plugins.statemachine.umlFilePath1={{ work_dir }}/config/buyer-offer.uml
hoperun.plugins.statemachine.umlFilePath2={{ work_dir }}/config/forfaiting.uml
hoperun.plugins.statemachine.umlFilePath3={{ work_dir }}/config/forfaiting-notice.uml
hoperun.plugins.statemachine.umlFilePath4={{ work_dir }}/config/freeFormat.uml
#portal
{% if instance_vars.portal is defined and instance_vars.portal %}
hbcc.core.properties.portalFlag=true
hbcc.ugm.portalUrl.ip={{ instances[instance_vars.portal_instance]['portal-service-ws']['domain'] }}
hbcc.ugm.portalUrl.port={{ instances[instance_vars.portal_instance]['portal-service-ws']['public_port'] }}
hbcc.ugm.portalUrl.webUrl=http://{{ instances[instance_vars.portal_instance]['portal-frontend']['public_addr'] }}
{% else %}
hbcc.core.properties.portalFlag=false
{% endif %}
#json
hbcc.ugm.rolePath={{ work_dir }}/config/init_default_roles.json
#log
logging.config={{ work_dir }}/config/logback-spring.xml
hbcc.core.properties.partnerChain[0].name={{ instance_vars.partner_chain[0]['name'] }}
hbcc.core.properties.partnerChain[0].ip={{ instance_vars.partner_chain[0]['ip'] }}
hbcc.core.properties.partnerChain[0].port={{ instance_vars.partner_chain[0]['port'] }}
hbcc.core.properties.partnerChain[0].agent={{ instance_vars.partner_chain[0]['agent'] }}
hbcc.core.properties.partnerChain[0].sslEnable=true

hbcc.core.httpClient.keyStore.path=/home/{{ worker_user }}/keystore/hbcc.keystore
hbcc.core.httpClient.keyStore.password=changeit
